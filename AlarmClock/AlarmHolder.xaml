<Page x:Class="AlarmClock.AlarmHolder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AlarmClock"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="AlarmHolder" Width="180">

    <Grid Background="#FF3F3F46">

        <ScrollViewer HorizontalAlignment="Left" Height="290" VerticalAlignment="Top" Width="180">
            <StackPanel x:Name="sp_AlarmHolder" HorizontalAlignment="Left" Height="341" VerticalAlignment="Top" Width="180">
                <Frame x:Name="frame" Content="Frame" Height="30"/>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
