<Page x:Class="AlarmClock.AlarmInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AlarmClock"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="AlarmInfo" Width="160" Height="32">

    <Grid Background="#FF3F3F46">
        <Rectangle HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Width="34">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <LinearGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                            <SkewTransform CenterY="0.5" CenterX="0.5"/>
                            <RotateTransform Angle="90" CenterY="0.5" CenterX="0.5"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </LinearGradientBrush.RelativeTransform>
                    <GradientStop Color="#FFECB53E" Offset="0.708"/>
                    <GradientStop Color="#FF0A8CD6"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Button x:Name="b_alarmInfo" Content="2018-06-13 15:45" HorizontalAlignment="Left" Margin="39,3,0,0" VerticalAlignment="Top" Width="118" Height="26" BorderBrush="{x:Null}" Background="#FF3F3F46" Foreground="White"/>

    </Grid>
</Page>
